@model TaskProject.Models.Company
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form action="/companies/create" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CompanyName">CompanyName</label>
            <input type="text" class="form-control" id="CompanyName" placeholder="CompanyName" required />
        </div>
        <div class="form-group col-md-6">
            <label for="ContactNumber">ContactNumber</label>
            <input type="text" class="form-control" id="ContactNumber" placeholder="ContactNumber" required />
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" placeholder="Address" required />
        </div>

    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" href="/companies/index">Cancel</a>
</form>

